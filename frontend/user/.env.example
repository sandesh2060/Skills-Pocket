# ============================================
# FILE: frontend/user/.env.example
# ============================================

# API URLs
VITE_USER_API_URL=http://localhost:5000/api
VITE_ADMIN_API_URL=http://localhost:5001/api

# App Configuration
VITE_APP_NAME=skillspocket
VITE_APP_URL=http://localhost:3000

# Admin Email Domains (comma-separated)
VITE_ADMIN_EMAIL_DOMAINS=@admin.skillspocket.com,@skillspocket.com

# Feature Flags
VITE_ENABLE_SOCIAL_LOGIN=false
VITE_ENABLE_EMAIL_VERIFICATION=true

# ============================================
# Create .env file and copy these values
# ============================================

# Cloudinary (for client-side uploads if needed)
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# Stripe (Public Key)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# Google OAuth (if implementing)
VITE_GOOGLE_CLIENT_ID=your_google_client_id

# LinkedIn OAuth (if implementing)
VITE_LINKEDIN_CLIENT_ID=your_linkedin_client_id

# Environment
VITE_NODE_ENV=development